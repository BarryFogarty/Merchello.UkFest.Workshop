@inherits Merchello.UkFest.Web.Mvc.DitFloView<Merchello.UkFest.Web.Models.Category.CategoryTree>

<div class="panel panel-default sidebar-menu">

    <div class="panel-heading">
        <h3 class="panel-title">Categories</h3>
    </div>

    <div class="panel-body">
        <ul class="nav nav-pills nav-stacked category-menu">
            @foreach (var item in Model.View.Items)
            {
                <li @Umbraco.If(item.CategoryLink.IsActive, "class=\"active\"")>
                    <a href="@item.CategoryLink.Url">@item.CategoryLink.Title <span class="badge pull-right">@item.ProductCount</span></a>
                    <ul>
                        @foreach (var sub in item.SubLinks)
                        {
                            <li @Umbraco.If(sub.IsActive, "class=\"active\"")>
                                <a href="@sub.Url">@sub.Title</a>
                            </li>
                        }
                    </ul>
                </li>
            }
           
        </ul>

    </div>
</div>
