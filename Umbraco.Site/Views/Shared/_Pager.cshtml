@inherits UmbracoViewPage<Merchello.UkFest.Web.Models.PagedCollection>

@{
    var url = UmbracoContext.PublishedContentRequest.PublishedContent.Url;
}
@if (Model.TotalPages > 1)
{ 
<div class="pages">
    
    @if (Model.CurrentPage < Model.TotalPages)
    {
    <p class="loadMore">
        <a href="#" class="btn btn-primary"><i class="fa fa-chevron-down"></i>Load more</a>
    </p>
    }
    <ul class="pagination">
        @if (Model.CurrentPage > 1)
        {
            <li><a href="@url?page=@(Model.CurrentPage - 1)">&laquo;</a></li>
        }
        
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="@Umbraco.If(i == Model.CurrentPage, "active")"><a href="@url?page=@i">@i</a></li>
        }
        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li><a href="@url?page=@(Model.CurrentPage + 1)">&raquo;</a></li>
        }
    </ul>
</div>
}