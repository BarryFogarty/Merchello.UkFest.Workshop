@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = "Base.cshtml";
}

<div id="content">
    <div class="container">

        <div class="col-md-12">
            @Html.Partial("Navigation/Breadcrumb")
            @Html.Partial("_Header")
        </div>

        <div class="row">


            <!-- *** LEFT COLUMN ***
			_________________________________________________________ -->

            <div class="col-sm-9">

                @Html.Partial("Product/Collection")

            </div>
            <!-- /.col-md-9 -->

            <!-- *** LEFT COLUMN END *** -->

            <!-- *** RIGHT COLUMN ***
			_________________________________________________________ -->

            <div class="col-sm-3">

                <!-- *** MENUS AND FILTERS ***
 _________________________________________________________ -->
                @Html.Partial("Filters/Category")

                @Html.Partial("Filters/Brand")

                @Html.Partial("Filters/Colour")

                <!-- *** MENUS AND FILTERS END *** -->

            </div>
            <!-- /.col-md-3 -->

            <!-- *** RIGHT COLUMN END *** -->

        </div>

    </div>
    <!-- /.container -->
</div>
