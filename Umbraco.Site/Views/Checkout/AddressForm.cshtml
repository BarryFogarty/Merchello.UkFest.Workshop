@inherits UmbracoViewPage<Merchello.UkFest.Web.Models.Checkout.AddressModel>
@using Merchello.UkFest.Web.Controllers

<h3 class="hidden"><i class="fa fa-map-marker"></i><br>Address</h3>
@using (Html.BeginUmbracoForm<CheckoutController>("SaveAddress", null, new { id = "step1" }))
{
    <fieldset>
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Firstname *</label>
                    @Html.ValidationMessageFor(x => x.FirstName)
                    @Html.TextBoxFor(x => x.FirstName, new { @class= "form-control required"})
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Lastname *</label>
                    @Html.ValidationMessageFor(x => x.LastName)
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control required" })
                </div>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Address 1 *</label>
                    @Html.ValidationMessageFor(x => x.Address1)
                    @Html.TextBoxFor(x => x.Address1, new { @class = "form-control required" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Address 2</label>
                    @Html.TextBoxFor(x => x.Address2, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-sm-6 col-md-3">
                <div class="form-group">
                    <label>City *</label>
                    @Html.ValidationMessageFor(x => x.Locality)
                    @Html.TextBoxFor(x => x.Locality, new { @class = "form-control required" })
                </div>
            </div>
            <div class="col-sm-6 col-md-3">
                <div class="form-group">
                    <label>Postal code *</label>
                    @Html.ValidationMessageFor(x => x.PostalCode)
                    @Html.TextBoxFor(x => x.PostalCode, new { @class = "form-control required" })
                </div>
            </div>
            <div class="col-sm-6"></div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Telephone</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Email *</label>
                    @Html.ValidationMessageFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control required" })
                </div>
            </div>

        </div>
        <!-- /.row -->
    </fieldset>
    <div class="box-footer">
        <div class="pull-left">
            <a href="@Model.PreviousUrl" class="btn btn-default"><i class="fa fa-chevron-left"></i>Back to basket</a>
        </div>
        <div class="pull-right">
            <input type="submit" class="btn btn-primary" value="Next" />
            @*<button type="submit" class="btn btn-primary">
                Continue to Delivery Method<i class="fa fa-chevron-right"></i>
            </button>*@
        </div>
    </div>
}
